{
  "compilerOptions": {
    // Project options
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "noEmit": true,
    "jsx": "react-jsx",
    
    // Module resolution
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // Strict checks
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,

    "baseUrl": ".",          // обязательно
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": [
    "src"
  ]
}
